<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.Supermercado" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Supermercado" parent="Base.Theme.Supermercado" />

    <!-- Estilo Actual (AppTheme) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo 1: Botones Negros, Letra Naranja y Fondo Gris -->
    <style name="Estilo1" parent="Base.Theme.Supermercado">
        <item name="android:buttonStyle">@style/Widget.Button.Black.Estilo1</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:windowBackground">@color/lightGray</item>
    </style>

    <!-- Widget para Botones Negros (Estilo 1) -->
    <style name="Widget.Button.Black.Estilo1" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/black_button_background</item>
    </style>

    <!-- Estilo 2: Botones Verdes, Letra Gris y Fondo Azul -->
    <style name="Estilo2" parent="Base.Theme.Supermercado">
        <item name="android:buttonStyle">@style/Widget.Button.Green.Estilo2</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:windowBackground">@color/blue</item>
    </style>

    <!-- Widget para Botones Verdes (Estilo 2) -->
    <style name="Widget.Button.Green.Estilo2" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/green_button_background</item>
    </style>

    <!-- Estilo 3: Botones Rojos, Letra Amarilla y Fondo Rojo -->
    <style name="Estilo3" parent="Base.Theme.Supermercado">
        <item name="android:buttonStyle">@style/Widget.Button.Red.Estilo3</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <!-- Widget para Botones Rojos (Estilo 3) -->
    <style name="Widget.Button.Red.Estilo3" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/red_button_background</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

</resources>
